<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ImageVIew to display our Course Image -->
        <TextView
            android:id="@+id/idIVKekuatan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:padding="5dp"
            android:text="4.5\n SR"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rounderd"/>

        <!-- Text View to display Course Name -->
        <TextView
            android:id="@+id/idTVLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVKekuatan"
            android:text="Lokasi"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/idTVDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVLokasi"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/idIVKekuatan"
            android:textSize="13sp"
            android:drawablePadding="2dp"
            android:text="Tanggal"/>
        <TextView
            android:id="@+id/idTVKedalaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVDate"
            android:layout_marginStart="10dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@id/idIVKekuatan"
            android:drawablePadding="2dp"
            android:text="Kedalaman"/>
        <TextView
            android:id="@+id/idTVPotensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVKedalaman"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/idIVKekuatan"
            android:drawablePadding="2dp"
            android:text="Potensi"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>